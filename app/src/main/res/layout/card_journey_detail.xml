<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/busTicketRVCard">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/custom_frame"
        android:layout_margin="16dp"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:text="KALKIŞ"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textColor="@color/main_blue"/>
                    <TextView
                        android:id="@+id/originTimeTextCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:30"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginHorizontal="5dp"
                        android:textColor="@color/main_blue"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_forward_24"
                    android:layout_gravity="bottom"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VARIŞ"
                        android:textSize="16sp"
                        android:layout_marginHorizontal="5dp"
                        android:textAlignment="center"
                        android:textColor="@color/main_blue"/>
                    <TextView
                        android:id="@+id/destinationTimeTextCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:30"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginHorizontal="5dp"
                        android:textColor="@color/main_blue"/>

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/priceTextCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_red_background"
                android:text="75,00 TL"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp">
            <TextView
                android:id="@+id/originLocationTextCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esenler Otogarı"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="16sp"
                android:layout_marginHorizontal="5dp"/>
            <TextView
                android:id="@+id/destinationLocationTextCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ankara Aşti Otogarı"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>